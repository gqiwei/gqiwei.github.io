<!DOCTYPE html>
<html>
  <%- partial('_partial/head') %>
  <body>
  
	<div class="container ">
		<%- partial('_partial/header') %>
		<main class="main">
		  <div class="row clearfix">
			<div class="col-md-2 column">
			</div>
			<div class="col-md-7 column">
			<%- body %>
			
			</div>
			<div class="col-md-3 column">
				<% for (name in theme.menu) { %>
					<% if (url_for(theme.menu[name])=='/'&&is_post()){ %> 
						<aside id="article-toc" role="navigation" class="fixed">
							<div id="article-toc-inner">
								<strong class="sidebar-title">
									目录
								</strong>
								<%- toc(body,{list_number:false}) %>
							</div>
						</aside>
					<% } %> 	
				<% } %>

				<a class="btn btn-default hidden-sm hidden-xs " onclick="toTop()" role="button" style="position:fixed;bottom:50px;display:none;" id="return-top">
					<span class="hidden-sm hidden-xs">回到顶部</span>
				</a>
			</div>
		</div>
		</main>
		
		<%- partial('_partial/footer') %>
	</div>
	
  </body>
</html>