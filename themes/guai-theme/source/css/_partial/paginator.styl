.page-nav {
  padding: .5em 0;
  text-align: center;
  // background-color: #fff;
  
  // box-shadow: 0 0 2px #ddd;
  margin-bottom: 1em;

  border-top: 1px solid rgba(200,200,200,0.25);
  
  .prev,
  .next,
  .page-number {
    padding: .1em .5em;
  }

  .prev {
    float: left;
  }

  .next {
    float: right;
  }

  a {
    color: #606975;
    text-decoration: none;
    font-size: 17px;

    a:hover {
      color: #23527c;
    }
  }
  span{
    color: #606975;
    font-size: 17px;
  }
}
